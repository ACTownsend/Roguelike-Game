#include <iostream>
using namespace std;
  int h;
int start;
int total=0;
int main ()
{
  start=15;
  h=start;
  for (int c=0; c<=start;c++)
  cout<<"_";
  cout<<""<<endl;
    for(int i=0;i<h;i++){
    cout<<"*";}
  cout<<"/"<<endl ;

  while (h>0){                                     
  int dmg;
  cin>>dmg;
    
    total=total+dmg;
    h=h-dmg;
    if(dmg<h)
      for (int c=0; c<=start;c++)
  cout<<"_";
  cout<<""<<endl;
  for (int d=0; d<h;d++)
    cout <<"*";
  if (dmg<h){
    for (int z=0; z<total;z++)
    cout<<" ";
  cout<<"/"<<endl;}
  }
  cout<<"you killed him good job no one cares"<<endl;
